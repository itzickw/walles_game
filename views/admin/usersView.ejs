
    <%- include('../partiels/headerAdmin.ejs') %>
    <h1 class="title">משתמשים</h1>
    
    <div style="direction:rtl;display: flex;">
        <h4>מקרא: </h4>
        <div class="stages-display">
            <% for(let i = 0; i < colors.length - 1; i++) { %>
                <div class="satge-color" style="background-color: <%= colors[i] %>;"><%= i+1 %></div>
            <% } %>
        </div>
    </div>
    
    <div class="grid-container">
        <% if (users != []) { %>
            <%for(user of users){%>    

                <div class="student-wrap">

                    <div class="student-name">
                      <h3><%= user.name%></h3>                  
                      <a href="/admin/userUpdate/<%= user._id%>"><button id="sub-btn" class="btn"> מעקב משתמש</button> </a>  
                  </div>                

                  <div class="student-traffic-light">
                      <div style="height:20px; width:20px; border-radius:50%; background-color:<%= user.skills[0].color %>;"></div>
                      <div style="height:20px; width:20px; border-radius:50%;margin-top: 5px; background-color:<%= user.skills[1].color %>;"></div>
                      <div style="height:20px; width:20px; ; border-radius:50%;margin-top: 5px; background-color:<%= user.skills[2].color %>"></div>
                    </div> 

                </div>

            <%}%>
        <% } %> 
  </div>
      
</body>
</html>